<?xml version="1.0" encoding="UTF-8"?>
<infinispan
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:infinispan:config:7.0 http://www.infinispan.org/schemas/infinispan-config-7.0.xsd"
      xmlns="urn:infinispan:config:7.0">

  <cache-container name="xwiki" statistics="true"
                   default-cache="default" shutdown-hook="DEFAULT">

     <serialization marshaller="org.infinispan.commons.marshall.JavaSerializationMarshaller"/>

     <jmx domain="org.xwiki.infinispan.{{ wiki_name }}"
          duplicate-domains="true"/>

     <!--
        The default cache.
     -->
     <local-cache name="default" statistics="true">
        <memory max-count="10000"/>
     </local-cache>

     <!-- Formula Renderer cache -->
     <local-cache name="xwiki.plugin.formula">
        <persistence>
          <file-store segmented="false" purge="false" path="" />
        </persistence>
     </local-cache>

     <!-- LESS CSS cache -->
     <local-cache name="lesscss.skinfiles.cache">
        <persistence>
          <file-store segmented="false" purge="false" path="" />
        </persistence>
     </local-cache>

   </cache-container>
</infinispan>
